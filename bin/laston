#!/usr/bin/env python3

import os
import time
import pwd
import sys

if len(sys.argv) > 1:
    user=sys.argv[1]
else:
    user=pwd.getpwuid(os.getuid()).pw_name

base = '/home'
path = os.path.join(base,user)

if os.path.isdir(path):
    lmod = os.path.getmtime(path)
    seconds_old = int((time.time() - lmod))
    print(seconds_old)





